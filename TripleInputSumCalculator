        margin: 0px;
    }
    #double {
        padding: 10px;
        background-color: lime; /* Change to a solid color here */
        border: none;
        box-shadow: 1px 1px 6px 0.1px;
        cursor: pointer;
        transition: background-color 0.5s;
    }
    #double:active {
        background-color: rgba(161, 255, 20, 0.952);
    }
</style>
<script>
    function add() {
      var n1 = parseInt(document.getElementById("in1").value);
      var n2 = parseInt(document.getElementById("in2").value);
      var n3 = parseInt(document.getElementById("in3").value);    
      var sum= n1+n2+n3;  
      document.getElementById("result").value = sum;
    }
</script>
</head>
<body>
    <div>
          <input id="in1" placeholder="Input number"/>
    </div>


    <div>
          <input id="in2" placeholder="Input number"/>
          <button id="double" onclick="add()">Add</button>
    </div>


    <div>
         <input id="in3" placeholder="Input number"/>
    </div>






    <input id="result" placeholder="Results"/>


